#!/bin/bash

cd `dirname $(readlink -f $0)`

DEPS=`pwd`

mkdir -p Compiled/linux-64/Debug/glew
cd       Compiled/linux-64/Debug/glew

cmake -DCMAKE_C_FLAGS="-g -fPIC -fcolor-diagnostics" \
      -Dglew-cmake_BUILD_SHARED=OFF \
      -DONLY_LIBS=ON                \
      -DCMAKE_C_COMPILER=clang      \
      -G Ninja $DEPS/Libs/glew
ninja
