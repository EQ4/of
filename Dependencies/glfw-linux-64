#!/bin/bash

cd `dirname $(readlink -f $0)`

DIR=`pwd`

cd    Libs/glfw

mkdir -p compiled/linux-64
cd       compiled/linux-64

cmake -G Ninja                  \
      -DCMAKE_C_COMPILER=clang  \
      -DGLFW_BUILD_TESTS=OFF    \
      -DGLFW_BUILD_EXAMPLES=OFF \
      ../..
ninja

cp    src/libglfw3.a $DIR/Compiled/linux-64

