#!/bin/bash

FILE=$(readlink -f $0)
DIR=`dirname $FILE`

cd    $DIR

cd    Libs/glfw
mkdir compiled

mkdir compiled/mingw-64
cd    compiled/mingw-64

MINGW=/opt/mxe/usr

cmake -G Ninja \
      -DCMAKE_TOOLCHAIN_FILE=/opt/mxe/usr/x86_64-w64-mingw32.static/share/cmake/mxe-conf.cmake \
      ../..
ninja

cp    src/libglfw3.a $DIR/Compiled/mingw-64

