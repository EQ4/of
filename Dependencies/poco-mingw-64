#!/bin/bash

cp     poco.pocomsg.h   Libs/poco/Foundation/src/pocomsg.h
cp     poco.Linux-clang Libs/poco/build/config/Linux-clang
cp     poco.MinGW-w64   Libs/poco/build/config/MinGW-w64

cd     Libs/poco

mkdir  compiled
cd     compiled

.././configure --config=MinGW-w64 --static

cp     ../../../poco.Makefile Makefile

make

cd     lib/MinGW-w64/x86_64

mv     libPocoFoundation.a ../../../../../../Compiled/mingw-64
mv     libPocoXML.a        ../../../../../../Compiled/mingw-64
mv     libPocoUtil.a       ../../../../../../Compiled/mingw-64
mv     libPocoNet.a        ../../../../../../Compiled/mingw-64
mv     libPocoCrypto.a     ../../../../../../Compiled/mingw-64
mv     libPocoNetSSL.a     ../../../../../../Compiled/mingw-64
mv     libPocoZip.a        ../../../../../../Compiled/mingw-64

cd     ../../../..

rm -rf compiled

